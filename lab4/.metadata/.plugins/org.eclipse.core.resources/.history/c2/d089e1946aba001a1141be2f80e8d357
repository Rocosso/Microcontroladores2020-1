	switch(){
	
	}
	
}
void main(void) {
	SOPT1 = 0b01010010;
	PTBDD = 0b00001111;				//inicializacion del puerto B
	PTBPE = 0x80;				//enable resistencias pull	
	
	PTBDD_PTBDD0 = 1;
	PTBD_PTBD0 = 1;
	
	kbi_init();
	SCI_init();
	
  EnableInterrupts;  

  for(;;) {
    
  } /* loop forever */
  /* please make sure that you never leave main */
}
